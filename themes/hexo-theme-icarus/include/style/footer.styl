/* ---------------------------------
 *            Page Footer
 * --------------------------------- */
 .footer
    backdrop-filter: blur(10px)
    -webkit-backdrop-filter: blur(10px)
    position: relative
    &:before
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: rgba(255,255,255,0.7)

footer.footer
    background-color: transparent
    .level-start
        +mobile()
            text-align: center

    .level-end
        .field
            flex-wrap: wrap
            align-items: center

            +mobile()
                justify-content: center
                margin-top: 1rem

.footer-logo
    img
        max-height: $logo-height

.footer a:not(.button)
    color: inherit
    &:hover
        text-decoration: underline
