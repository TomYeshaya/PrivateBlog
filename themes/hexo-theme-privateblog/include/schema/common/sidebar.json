{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/common/sidebar.json",
    "description": "侧边栏的配置, 请注意,  只有当它至少有一个小部件时, 侧边栏才可见.",
    "type": "object",
    "properties": {
        "left": {
            "type": "object",
            "description": "左栏的配置",
            "properties": {
                "sticky": {
                    "type": "boolean",
                    "description": "当页面滚动时，侧边栏是否保持在顶部",
                    "default": false
                }
            }
        },
        "right": {
            "type": "object",
            "description": "右栏的配置",
            "properties": {
                "sticky": {
                    "type": "boolean",
                    "description": "当页面滚动时，侧边栏是否保持在顶部",
                    "default": false
                }
            }
        }
    }
}